<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_item_height">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.4"
        android:gravity="center|right" >

        <ImageView
            android:layout_width="@dimen/drawer_item_pic_size"
            android:layout_height="@dimen/drawer_item_pic_size"
            android:id="@+id/drawer_item_icon"
            android:alpha="0.9" />
    </LinearLayout>

    <Space
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.3" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="Поиск ВУЗа"
        android:id="@+id/drawer_item_text"
        android:layout_weight="0.7"
        android:gravity="center|left"
        android:paddingRight="20dp"
        android:textSize="@dimen/drawer_item_text_size"
        android:textColor="@color/drawer_item_text_clr" />
</LinearLayout>